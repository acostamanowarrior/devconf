{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "demoapp-template",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${NAME}",
                    "deploymentconfig": "${NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": {
                    "build": "${NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Dockerfile",
                    "dockerfile": "FROM openshift/origin\n\nMAINTAINER Ruben Romero Montes \u003crromerom@redhat.com\u003e\n\nRUN useradd openshift --uid 1000\n\nUSER 1000\n\nENTRYPOINT []\n\nCMD [\"while true; do sleep 1000; done\"]\n"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "origin:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "generation": 1,
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "demoapp"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${NAME}",
                    "deploymentconfig": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${NAME}",
                            "deploymentconfig": "${NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${NAME}",
                                "image": " ",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "OC_URL",
                                        "value": "${OC_URL}"
                                    }
                                ]
                            }
                        ],
                        "serviceAccountName": "devconf",
                        "serviceAccount": "devconf"
                    }
                }
            }
        }
    ],
    "parameters": [
      {
        "name": "NAME",
        "description": "The NAME of the application",
        "value": "demoapp",
        "required": true
      },
      {
        "name": "OC_URL",
        "description": "OpenShift URL used by the Service Account to log in",
        "required": true
      }
    ]
}
